
<div class="container mt-5">
  <h1 class='mb-4'>Find a land to lead!</h1>
  <div class="grid">

  <% @lands.each do | land | %>
  <div class="d-flex flex-column card">
    <div class='d-flex img-div'>
      <img src=<%= land.flag %> class="img-flag" alt="flag-image">
    </div>
    <div class="card-body d-flex flex-column justify-content-between">
      <h4 class="card-title fw-bold"><%= land.name %></h4>

      <div class="d-flex justify-content-around mb-2 mt-2">
        <div class="d-flex flex-column align-items-center">
          <i class="fa-solid fa-people-group"></i>
          <span class='fw-bold'><%= land.population %></span>
          <span>people</span>
        </div>

        <div class="d-flex flex-column align-items-center">
          <i class="fa-solid fa-map"></i>
          <span class='fw-bold'><%= land.area %></span>
          <span>km2</span>
        </div>


      </div>
      <div class="d-grid gap-2">
      <%= link_to "See more", land_path(land.id), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>

  </div>
</div>
