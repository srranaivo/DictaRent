
<div class="container mt-5">
  <h1>Find a country to lead!</h1>
  <div class="grid">

  <% @lands.each do | land | %>
  <div class="card">
    <img src=<%= land.flag %> class="card-img-to" alt="...">
    <p><% land.flag %>  </p>
    <div class="card-body">
      <h5 class="card-title"><%= land.name %></h5>
      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
      <%= link_to "see details", land_path(land.id), class: "btn btn-primary" %>
    </div>
  </div>
  <% end %>

  </div>
</div>
