<div class="container mb-5">
<h1><%= @land.name %></h1>
<% @owner = User.find(@land.user_id)[:email] %>
<h2>Owned by : <%= @owner == current_user.email ? 'you' : @owner %></h2>

<% if @status %>
  <div class="d-flex align-items-center justify-content-between">
    <h1 class='mt-5 mb-5'>My rentals periods</h1>
    <%= link_to "Add periodes",new_land_land_periode_path(current_user.land.id ), class: "btn btn-primary" %>
  </div>
    <% @periodes.each do | periode | %>
      <div class='mb-2 mt-2'>
        <div class="d-flex justify-content-between">
          <div class="d-flex justify-content-around">
            <h5 class='me-2'>From:</h5>
            <h5 class='me-2'><strong><%= periode.starts_the %></strong></h5>
            <h5 class='me-2'> to: </h5>
            <h5 class='me-2'><strong><%= periode.ends_the %></strong></h5>
          </div>
        </div>
      </div>
      <% periode.bookings.each do |booking| %>
        <% if booking.status == 'pending' %>
          <div class="card">
            <div class="d-flex flex-row justify-content-between card-body">
              <p>Offer from: <strong><%= booking.user.email %></strong></p>
              <div>
                <%= link_to "Accept", '#', class: "btn btn-outline-success" %>
                <%= link_to "Reject", '#', class: "btn btn-outline-warning" %>
              </div>
            </div>
          </div>
        <% elsif booking.status == 'accepted' %>
          <div class="card" style="background-color: #9cf0b2">
            <div class="d-flex flex-row justify-content-between card-body">
              <p>Offer from: <strong><%= booking.user.email %></strong></p>
              <div>
                <%= link_to "Cancel", '#', class: "btn" %>
              </div>
            </div>
          </div>
        <% elsif booking.status == 'rejected' %>
          <div class="card" style="background-color: #e3e3e3">
            <div class="d-flex flex-row justify-content-between card-body">
              <p>Offer from: <strong><%= booking.user.email %></strong></p>
              <div>
                <%= link_to "Cancel", '#', class: "btn" %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
      <% if periode.bookings.length < 1 %>
          <div class="card" style="background-color: transparent">
            <div class="d-flex flex-row justify-content-between card-body">
              <p>No offer yet... </p>
            </div>
          </div>
      <% end %>
  <% end %>
<% else %>
  <div class="container">
    <% @periodes.each do |periode| %>
        <div class='card mb-2 mt-2'>
          <div class="card-body d-flex justify-content-between">
            <div class="d-flex justify-content-between">
              <p><strong><%= periode.starts_the %></strong></p>
              <p>-</p>
              <p><strong><%= periode.ends_the %></strong></p>
            </div>

            <% if periode.already_rent_by_user?(current_user) %>
              <p><strong><%= periode.bookings.find_by(user: current_user).status %></strong></p>
            <% else %>
              <% @class_btn = periode.available? ? 'btn btn-primary' : 'btn btn-primary disabled' %>
              <%= button_to "Rent", land_periode_bookings_path(periode), class: @class_btn, form: { data: { turbo_confirm: 'Are you sure?' } } %>
            <% end %>

          </div>
        </div>
    <% end %>
    <% if @periodes.length < 1 %>
    <p>Sorry no rental periods yet ... </p>
    <h1>ðŸ¤”</h1>
    <% end %>
  </div>

<% end %>
</ul>
</div>
